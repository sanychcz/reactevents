<div class='container'>
	
	<p><%= link_to 'New event', new_admin_event_path, :class => "btn btn-default" %></p>

	<table class='table'>
		<tbody>
		<tr>
			<th>Event title</th>
			<th>Actions</th>
		</tr>
			<% @events.each do |event| %>
		<tr>
			<td><%= event.title %></td>
			<td><%= link_to 'Edit', [:edit, :admin, event] %> | 
					<%= link_to 'Delete', [:admin, event], method: :delete, data: { confirm: 'Are you sure?' } %></td>
		</tr>			
			<% end %>
		</tbody>
	</table>
</div>