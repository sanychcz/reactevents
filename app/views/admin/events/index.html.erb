<div class='container'>
	
	<p><%= link_to 'New event', new_admin_event_path, :class => "btn btn-success" %></p>

	<div class="row">

		<div class="col-md-3">
			<div class="panel panel-default">
  			<div class="panel-body">
    			<p><%= link_to 'All events', admin_events_path %></p>
    			<p><%= link_to 'Google', "http://www.google.com" %></p>
    			<p><%= link_to 'All events', admin_events_path %></p>
  			</div>
			</div>
		</div>

		<div class="col-md-9">
			<table class='table table-bordered'>
				<tbody>
				<tr>
					<th>Event title</th>
					<th>Event date</th>
					<th>Event place</th>
					<th>Actions</th>
				</tr>
					<% @events.each do |event| %>
				<tr>
					<td><%= event.title %></td>
					<td><%= event.date %></td>
					<td><%= event.place %></td>
					<td><%= link_to 'Edit', [:edit, :admin, event], :class => "btn btn-primary btn-sm" %><span> </span>
							<%= link_to 'Delete', [:admin, event], method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-sm" %></td>
				</tr>			
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>